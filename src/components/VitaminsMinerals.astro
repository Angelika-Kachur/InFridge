<style>
  .vitamins-section {
    margin-top: 1rem;
    margin-bottom: 4rem;
  }

  .clean-fifteen-card {
    background: linear-gradient(
      135deg,
      rgba(5, 150, 105, 0.08) 0%,
      rgba(6, 95, 70, 0.06) 100%
    );
    border: 1px solid var(--secondary);
    padding: 2.5rem;
    border-radius: 20px;
    margin-bottom: 3rem;
  }

  .fifteen-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 1rem;
  }

  .fifteen-grid .item {
    background: var(--card-subtle-bg);
    padding: 0.8rem;
    border-radius: 10px;
    text-align: center;
    font-size: 1rem;
    font-weight: 500;
    border: 1px solid transparent;
    transition: var(--transition);
  }

  .fifteen-grid .item:hover {
    background: var(--card-hover-bg);
    border-color: var(--secondary);
    transform: translateY(-2px);
  }

  .fifteen-grid span {
    margin-right: 0.5rem;
  }

  /* Mineral card specifics */
  .mineral-card {
    padding: 1.8rem;
  }

  .mineral-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .mineral-header h3 {
    margin: 0;
    color: var(--text);
  }

  .badge {
    background: var(--primary-glow);
    color: var(--primary);
    padding: 0.25rem 0.7rem;
    border-radius: 12px;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    white-space: nowrap;
  }

  .daily-need {
    font-size: 1rem;
    color: var(--secondary);
    font-weight: 600;
    margin-bottom: 1rem;
    border-bottom: 1px solid var(--glass-border);
    padding-bottom: 0.5rem;
  }

  .sources-list {
    list-style: none;
    font-size: 0.95rem;
  }

  .sources-list li {
    margin-bottom: 0.6rem;
    color: var(--text-muted);
    display: flex;
    justify-content: space-between;
  }

  .sources-list strong {
    color: var(--text);
    margin-right: 0.1rem;
  }

  .sources-list span {
    text-align: right;
    white-space: nowrap;
    flex-shrink: 0;
  }
</style>
