---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Not Found | InFridge">
    <div class="error-container">
        <div class="glass-card animate-fade error-content">
            <div class="icon-404" aria-label="Empty fridge">
                <svg viewBox="0 0 128 128" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <rect x="28" y="8" width="72" height="112" rx="10" stroke="currentColor" stroke-width="6"/>
                    <line x1="28" y1="48" x2="100" y2="48" stroke="currentColor" stroke-width="4"/>
                    <line x1="82" y1="28" x2="82" y2="40" stroke="currentColor" stroke-width="5" stroke-linecap="round"/>
                    <line x1="82" y1="60" x2="82" y2="80" stroke="currentColor" stroke-width="5" stroke-linecap="round"/>
                </svg>
            </div>
            <h1 class="text-gradient">404</h1>
            <h2>Nothing in the Fridge!</h2>
            <p>
                Oops! The page you're looking for seems to have expired or moved
                to another shelf.
            </p>
            <div class="actions">
                <a href="/" class="btn-primary">Return to Calculator</a>
                <a href="/guide" class="btn-secondary">Check Guidelines</a>
            </div>
        </div>
    </div>
</Layout>

<style>
    .error-container {
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 1rem;
    }

    .error-content {
        max-width: 500px;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        padding: 3rem 2rem;
    }

    .icon-404 {
        margin-bottom: 0.5rem;
        animation: float 6s ease-in-out infinite;
        color: var(--primary);
    }

    .icon-404 svg {
        width: 5rem;
        height: 5rem;
    }

    h1 {
        font-size: 4rem;
        line-height: 1;
        margin: 0;
    }

    h2 {
        font-size: 2rem;
        color: var(--text);
        margin: 0;
        font-weight: 700;
    }

    p {
        color: var(--text-muted);
        font-size: 1.3rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        max-width: 600px;
    }

    .actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .actions .btn-primary,
    .btn-secondary {
        font-size: 1.1rem;
        padding: 1rem 2rem;
    }

    .btn-secondary {
        background: transparent;
        border: 2px solid var(--glass-border);
        color: var(--text);
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: var(--transition);
    }

    .btn-secondary:hover {
        border-color: var(--primary);
        background: var(--card-subtle-bg);
    }

    @keyframes float {
        0% {
            transform: translateY(0px) rotate(0deg);
        }
        50% {
            transform: translateY(-10px) rotate(5deg);
        }
        100% {
            transform: translateY(0px) rotate(0deg);
        }
    }

    @media (max-width: 480px) {
        .actions {
            flex-direction: column;
            width: 100%;
        }

        .btn-primary,
        .btn-secondary {
            width: 100%;
            justify-content: center;
            display: flex;
        }
    }
</style>
