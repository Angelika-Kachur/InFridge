---
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Calculate your daily kcal, protein, and macro needs based on age, sex, and health goals." } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content={description}
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script is:inline>
			(function () {
				const saved = localStorage.getItem("theme");
				if (saved) {
					document.documentElement.setAttribute("data-theme", saved);
				}
			})();
		</script>
	</head>
	<body>
		<a href="#main-content" class="sr-only">Skip to main content</a>
		<header class="main-header container animate-fade">
			<a href="/" class="logo" aria-label="InFridge home">
				<svg
					class="logo-icon"
					viewBox="0 0 128 128"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
					aria-hidden="true"
				>
					<rect
						x="28"
						y="8"
						width="72"
						height="112"
						rx="10"
						stroke="currentColor"
						stroke-width="6"></rect>
					<line
						x1="28"
						y1="48"
						x2="100"
						y2="48"
						stroke="currentColor"
						stroke-width="4"></line>
					<line
						x1="82"
						y1="28"
						x2="82"
						y2="40"
						stroke="currentColor"
						stroke-width="5"
						stroke-linecap="round"></line>
					<line
						x1="82"
						y1="60"
						x2="82"
						y2="80"
						stroke="currentColor"
						stroke-width="5"
						stroke-linecap="round"></line>
					<circle
						cx="52"
						cy="30"
						r="6"
						fill="currentColor"
						opacity="0.3"></circle>
					<circle
						cx="48"
						cy="70"
						r="5"
						fill="currentColor"
						opacity="0.3"></circle>
					<circle
						cx="62"
						cy="74"
						r="5"
						fill="currentColor"
						opacity="0.3"></circle>
				</svg>
				<span class="logo-text"
					>In<span class="text-gradient">Fridge</span>
				</span>
			</a>

			<button
				id="menu-toggle"
				class="menu-toggle"
				type="button"
				aria-label="Open menu"
				aria-expanded="false"
				aria-controls="main-nav"
			>
				<span class="hamburger" aria-hidden="true"></span>
			</button>

			<nav id="main-nav" class="main-nav" aria-label="Main navigation">
				<a
					href="/"
					class="nav-link"
					aria-current={currentPath === "/" ? "page" : undefined}
					>Calculator</a
				>
				<a
					href="/guide"
					class="nav-link"
					aria-current={currentPath === "/guide/"
						? "page"
						: undefined}>Kitchen Guide</a
				>
				<a
					href="/vitamins"
					class="nav-link"
					aria-current={currentPath === "/vitamins/"
						? "page"
						: undefined}>Vitamins & Minerals</a
				>
				<a
					href="/guidelines"
					class="nav-link"
					aria-current={currentPath === "/guidelines/"
						? "page"
						: undefined}>Portions & Rules</a
				>
				<button
					id="theme-toggle"
					class="theme-toggle"
					type="button"
					aria-label="Toggle dark mode"
				>
					<span class="theme-toggle-icon" aria-hidden="true"></span>
				</button>
			</nav>
		</header>

		<main id="main-content" class="container">
			<slot />
		</main>

		<footer class="container main-footer">
			<p>
				&copy; 2026 InFridge. Data based on USDA 2020-2025 and NHS
				guidelines.
				<br />
				Consult with a medical professional before starting any restrictive
				diet.
			</p>
		</footer>

		<script is:inline>
			(function () {
				var btn = document.getElementById("theme-toggle");
				function getEffectiveTheme() {
					var saved = localStorage.getItem("theme");
					if (saved) return saved;
					return window.matchMedia("(prefers-color-scheme: dark)")
						.matches
						? "dark"
						: "light";
				}
				function updateIcon() {
					var isDark = getEffectiveTheme() === "dark";
					btn.querySelector(".theme-toggle-icon").textContent = isDark
						? "\u2600\uFE0F"
						: "\uD83C\uDF19";
					btn.setAttribute(
						"aria-label",
						isDark ? "Switch to light mode" : "Switch to dark mode"
					);
				}
				btn.addEventListener("click", function () {
					var current = getEffectiveTheme();
					var next = current === "dark" ? "light" : "dark";
					document.documentElement.setAttribute("data-theme", next);
					localStorage.setItem("theme", next);
					updateIcon();
				});
				updateIcon();

				var menuBtn = document.getElementById("menu-toggle");
				var nav = document.getElementById("main-nav");
				menuBtn.addEventListener("click", function () {
					var isOpen = nav.classList.toggle("nav-open");
					menuBtn.setAttribute("aria-expanded", isOpen);
					menuBtn.setAttribute("aria-label", isOpen ? "Close menu" : "Open menu");
				});

				nav.querySelectorAll(".nav-link").forEach(function (link) {
					link.addEventListener("click", function () {
						nav.classList.remove("nav-open");
						menuBtn.setAttribute("aria-expanded", "false");
						menuBtn.setAttribute("aria-label", "Open menu");
					});
				});
			})();
		</script>
	</body>
</html>

<style>
	.main-header {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		align-items: center;
		padding-top: 2rem;
		padding-bottom: 2rem;
		margin-bottom: 1rem;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 0.6rem;
		text-decoration: none;
		color: var(--text);
		font-size: 1.4rem;
		font-weight: 800;
		transition: var(--transition);
		flex-shrink: 0;
	}

	.logo:hover {
		opacity: 0.8;
	}

	.logo-icon {
		width: 32px;
		height: 32px;
		color: var(--primary);
	}

	.logo-text {
		letter-spacing: -0.05em;
	}

	.main-nav {
		display: flex;
		gap: 1.8rem;
		align-items: center;
	}

	.nav-link {
		color: var(--text-muted);
		text-decoration: none;
		font-weight: 600;
		transition: var(--transition);
		font-size: 1rem;
		white-space: nowrap;
	}

	.nav-link:hover,
	.nav-link[aria-current="page"] {
		color: var(--primary);
	}

	.theme-toggle {
		background: var(--glass-bg);
		border: 1px solid var(--glass-border);
		border-radius: 10px;
		width: 38px;
		height: 38px;
		cursor: pointer;
		transition: var(--transition);
		font-size: 1.1rem;
		line-height: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.theme-toggle:hover {
		border-color: var(--primary);
		background: var(--card-hover-bg);
	}

	.theme-toggle:focus-visible {
		outline: 2px solid var(--primary);
		outline-offset: 2px;
	}

	/* Hamburger button — hidden on desktop */
	.menu-toggle {
		display: none;
		background: var(--glass-bg);
		border: 1px solid var(--glass-border);
		border-radius: 10px;
		width: 38px;
		height: 38px;
		cursor: pointer;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
		transition: var(--transition);
	}

	.menu-toggle:hover {
		border-color: var(--primary);
		background: var(--card-hover-bg);
	}

	.menu-toggle:focus-visible {
		outline: 2px solid var(--primary);
		outline-offset: 2px;
	}

	.hamburger {
		display: block;
		width: 18px;
		height: 2px;
		background: var(--text);
		position: relative;
		transition: var(--transition);
	}

	.hamburger::before,
	.hamburger::after {
		content: "";
		position: absolute;
		left: 0;
		width: 18px;
		height: 2px;
		background: var(--text);
		transition: var(--transition);
	}

	.hamburger::before {
		top: -6px;
	}

	.hamburger::after {
		top: 6px;
	}

	/* Animate hamburger to X when open */
	.menu-toggle[aria-expanded="true"] .hamburger {
		background: transparent;
	}

	.menu-toggle[aria-expanded="true"] .hamburger::before {
		top: 0;
		transform: rotate(45deg);
	}

	.menu-toggle[aria-expanded="true"] .hamburger::after {
		top: 0;
		transform: rotate(-45deg);
	}

	.main-footer {
		text-align: center;
		margin-top: 5rem;
		padding-bottom: 4rem;
		border-top: 1px solid var(--glass-border);
		padding-top: 2rem;
	}

	.main-footer p {
		color: var(--text-muted);
		font-size: 1rem;
	}

	/* Mobile — hamburger menu */
	@media (max-width: 860px) {
		.menu-toggle {
			display: flex;
		}

		.main-nav {
			display: none;
			width: 100%;
			flex-direction: column;
			gap: 0;
			background: var(--glass-bg);
			border: 1px solid var(--glass-border);
			border-radius: 12px;
			padding: 0.5rem 0;
			margin-top: 1rem;
		}

		.main-nav.nav-open {
			display: flex;
		}

		.nav-link {
			width: 100%;
			padding: 0.75rem 1.25rem;
			font-size: 1rem;
			border-radius: 8px;
		}

		.nav-link:hover,
		.nav-link[aria-current="page"] {
			background: var(--primary-glow);
		}

		.main-nav .theme-toggle {
			margin: 0.5rem 1.25rem;
			align-self: flex-start;
		}
	}
</style>
