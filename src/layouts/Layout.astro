---
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Calculate your daily kcal, protein, and macro needs based on age, sex, and health goals."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script is:inline>
			(function () {
				const saved = localStorage.getItem("theme");
				if (saved) {
					document.documentElement.setAttribute("data-theme", saved);
				}
			})();
		</script>
	</head>
	<body>
		<a href="#main-content" class="sr-only">Skip to main content</a>
		<header class="main-header container animate-fade">
			<a href="/" class="logo" aria-label="InFridge home">
				<svg
					class="logo-icon"
					viewBox="0 0 128 128"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
					aria-hidden="true"
				>
					<rect
						x="28"
						y="8"
						width="72"
						height="112"
						rx="10"
						stroke="currentColor"
						stroke-width="6"></rect>
					<line
						x1="28"
						y1="48"
						x2="100"
						y2="48"
						stroke="currentColor"
						stroke-width="4"></line>
					<line
						x1="82"
						y1="28"
						x2="82"
						y2="40"
						stroke="currentColor"
						stroke-width="5"
						stroke-linecap="round"></line>
					<line
						x1="82"
						y1="60"
						x2="82"
						y2="80"
						stroke="currentColor"
						stroke-width="5"
						stroke-linecap="round"></line>
					<circle
						cx="52"
						cy="30"
						r="6"
						fill="currentColor"
						opacity="0.3"></circle>
					<circle
						cx="48"
						cy="70"
						r="5"
						fill="currentColor"
						opacity="0.3"></circle>
					<circle
						cx="62"
						cy="74"
						r="5"
						fill="currentColor"
						opacity="0.3"></circle>
				</svg>
				<span class="logo-text"
					>In<span class="text-gradient">Fridge</span>
				</span>
			</a>

			<nav class="main-nav" aria-label="Main navigation">
				<a
					href="/"
					class="nav-link"
					aria-current={currentPath === "/" ? "page" : undefined}
					>Calculator</a
				>
				<a
					href="/guide"
					class="nav-link"
					aria-current={currentPath === "/guide/"
						? "page"
						: undefined}>Kitchen Guide</a
				>
				<a
					href="/vitamins"
					class="nav-link"
					aria-current={currentPath === "/vitamins/"
						? "page"
						: undefined}>Vitamins & Minerals</a
				>
				<a
					href="/guidelines"
					class="nav-link"
					aria-current={currentPath === "/guidelines/"
						? "page"
						: undefined}>Portions & Rules</a
				>
			</nav>

			<button
				id="theme-toggle"
				class="theme-toggle"
				type="button"
				aria-label="Toggle dark mode"
			>
				<span class="theme-toggle-icon" aria-hidden="true"></span>
			</button>
		</header>

		<main id="main-content" class="container">
			<slot />
		</main>

		<footer class="container main-footer">
			<p>
				&copy; 2026 InFridge. Data based on USDA 2020-2025 and NHS
				guidelines.
				<br />
				Consult with a medical professional before starting any restrictive
				diet.
			</p>
		</footer>

		<script is:inline>
			(function () {
				var btn = document.getElementById("theme-toggle");
				function getEffectiveTheme() {
					var saved = localStorage.getItem("theme");
					if (saved) return saved;
					return window.matchMedia("(prefers-color-scheme: dark)")
						.matches
						? "dark"
						: "light";
				}
				function updateIcon() {
					var isDark = getEffectiveTheme() === "dark";
					btn.querySelector(".theme-toggle-icon").textContent = isDark
						? "\u2600\uFE0F"
						: "\uD83C\uDF19";
					btn.setAttribute(
						"aria-label",
						isDark ? "Switch to light mode" : "Switch to dark mode"
					);
				}
				btn.addEventListener("click", function () {
					var current = getEffectiveTheme();
					var next = current === "dark" ? "light" : "dark";
					document.documentElement.setAttribute("data-theme", next);
					localStorage.setItem("theme", next);
					updateIcon();
				});
				updateIcon();
			})();
		</script>
	</body>
</html>

<style>
	.main-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: 2rem;
		padding-bottom: 2rem;
		margin-bottom: 1rem;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 0.6rem;
		text-decoration: none;
		color: var(--text);
		font-size: 1.4rem;
		font-weight: 800;
		transition: var(--transition);
		flex-shrink: 0;
	}

	.logo:hover {
		opacity: 0.8;
	}

	.logo-icon {
		width: 32px;
		height: 32px;
		color: var(--primary);
	}

	.logo-text {
		letter-spacing: -0.05em;
	}

	.main-nav {
		display: flex;
		gap: 1.8rem;
		align-items: center;
	}

	.nav-link {
		color: var(--text-muted);
		text-decoration: none;
		font-weight: 600;
		transition: var(--transition);
		font-size: 1.125rem;
		white-space: nowrap;
	}

	.nav-link:hover,
	.nav-link[aria-current="page"] {
		color: var(--primary);
	}

	.theme-toggle {
		background: var(--glass-bg);
		border: 1px solid var(--glass-border);
		border-radius: 10px;
		width: 38px;
		height: 38px;
		cursor: pointer;
		transition: var(--transition);
		font-size: 1.1rem;
		line-height: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.theme-toggle:hover {
		border-color: var(--primary);
		background: var(--card-hover-bg);
	}

	.theme-toggle:focus-visible {
		outline: 2px solid var(--primary);
		outline-offset: 2px;
	}

	.main-footer {
		text-align: center;
		margin-top: 5rem;
		padding-bottom: 4rem;
		border-top: 1px solid var(--glass-border);
		padding-top: 2rem;
	}

	.main-footer p {
		color: var(--text-muted);
		font-size: 1rem;
	}

	@media (max-width: 768px) {
		.main-header {
			flex-wrap: wrap;
			gap: 1rem;
		}

		.logo {
			order: 1;
		}

		.theme-toggle {
			order: 2;
			margin-left: auto;
		}

		.main-nav {
			order: 3;
			width: 100%;
			justify-content: center;
			flex-wrap: wrap;
			gap: 1rem;
		}
	}
</style>
