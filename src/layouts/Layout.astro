---
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
}

const {
	title,
	description = "Calculate your daily kcal, protein, and macro needs based on age, sex, and health goals.",
} = Astro.props;
// Normalize path: strip trailing slash so "/guide/" and "/guide" both become "/guide"
// The root "/" stays as "/" (special case)
const rawPath = Astro.url.pathname;
const currentPath = rawPath === "/" ? "/" : rawPath.replace(/\/$/, "");
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script is:inline>
			(function () {
				const saved = localStorage.getItem("theme");
				if (saved) {
					document.documentElement.setAttribute("data-theme", saved);
				}
			})();
		</script>
	</head>
	<body>
		<a href="#main-content" class="sr-only">Skip to main content</a>
		<header class="main-header container animate-fade">
			<a href="/" class="logo" aria-label="InFridge home">
				<svg
					class="logo-icon"
					viewBox="0 0 128 128"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
					aria-hidden="true"
				>
					<rect
						x="28"
						y="8"
						width="72"
						height="112"
						rx="10"
						stroke="currentColor"
						stroke-width="6"></rect>
					<line
						x1="28"
						y1="48"
						x2="100"
						y2="48"
						stroke="currentColor"
						stroke-width="4"></line>
					<line
						x1="82"
						y1="28"
						x2="82"
						y2="40"
						stroke="currentColor"
						stroke-width="5"
						stroke-linecap="round"></line>
					<line
						x1="82"
						y1="60"
						x2="82"
						y2="80"
						stroke="currentColor"
						stroke-width="5"
						stroke-linecap="round"></line>
					<circle
						cx="52"
						cy="30"
						r="6"
						fill="currentColor"
						opacity="0.3"></circle>
					<circle
						cx="48"
						cy="70"
						r="5"
						fill="currentColor"
						opacity="0.3"></circle>
					<circle
						cx="62"
						cy="74"
						r="5"
						fill="currentColor"
						opacity="0.3"></circle>
				</svg>
				<span class="logo-text"
					>In<span class="text-gradient">Fridge</span>
				</span>
			</a>

			<button
				id="menu-toggle"
				class="menu-toggle"
				type="button"
				aria-label="Open menu"
				aria-expanded="false"
				aria-controls="main-nav"
			>
				<span class="hamburger" aria-hidden="true"></span>
			</button>

			<nav id="main-nav" class="main-nav" aria-label="Main navigation">
				<a
					href="/"
					class="nav-link"
					aria-current={currentPath === "/" ? "page" : undefined}
					>Calculator</a
				>
				<a
					href="/guide"
					class="nav-link"
					aria-current={currentPath === "/guide"
						? "page"
						: undefined}>Kitchen Guide</a
				>
				<a
					href="/vitamins"
					class="nav-link"
					aria-current={currentPath === "/vitamins"
						? "page"
						: undefined}>Vitamins & Minerals</a
				>
				<a
					href="/guidelines"
					class="nav-link"
					aria-current={currentPath === "/guidelines"
						? "page"
						: undefined}>Portions & Rules</a
				>
				<button
					id="theme-toggle"
					class="theme-toggle"
					type="button"
					aria-label="Toggle dark mode"
				>
					<span class="theme-toggle-icon" aria-hidden="true"></span>
				</button>
			</nav>
		</header>

		<main id="main-content" class="container">
			<slot />
		</main>

		<footer class="container main-footer">
			<div class="footer-disclaimer">
				<p>
					<strong>Disclaimer:</strong> InFridge is for informational and
					educational purposes only. It is not a substitute for professional
					medical advice, diagnosis, or treatment. Always consult a qualified
					healthcare provider.
				</p>
			</div>

			<div class="footer-sources">
				<p class="footer-sources-title">Sources</p>
				<ul>
					<li>
						<a
							href="https://www.dietaryguidelines.gov/resources/2020-2025-dietary-guidelines-online-materials"
							target="_blank"
							rel="noopener noreferrer"
							>USDA Dietary Guidelines 2020-2025</a
						>
					</li>
					<li>
						<a
							href="https://www.nhs.uk/live-well/eat-well/the-eatwell-guide/"
							target="_blank"
							rel="noopener noreferrer">NHS Eatwell Guide</a
						>
					</li>
					<li>
						<a
							href="https://www.who.int/news-room/fact-sheets/detail/healthy-diet"
							target="_blank"
							rel="noopener noreferrer"
							>WHO Healthy Diet Fact Sheet</a
						>
					</li>
					<li>
						<a
							href="https://www.ncbi.nlm.nih.gov/pmc/articles/PMC2824150/"
							target="_blank"
							rel="noopener noreferrer"
							>Mifflin-St Jeor Equation (PubMed)</a
						>
					</li>
					<li>
						<a
							href="https://www.ewg.org/foodnews/dirty-dozen.php"
							target="_blank"
							rel="noopener noreferrer"
							>EWG Dirty Dozen & Clean Fifteen</a
						>
					</li>
				</ul>
			</div>

			<p class="footer-copy">&copy; 2026 InFridge</p>
		</footer>

		<script is:inline>
			(function () {
				var btn = document.getElementById("theme-toggle");
				function getEffectiveTheme() {
					var saved = localStorage.getItem("theme");
					if (saved) return saved;
					return window.matchMedia("(prefers-color-scheme: dark)")
						.matches
						? "dark"
						: "light";
				}
				function updateIcon() {
					var isDark = getEffectiveTheme() === "dark";
					btn.querySelector(".theme-toggle-icon").textContent = isDark
						? "\u2600\uFE0F"
						: "\uD83C\uDF19";
					btn.setAttribute(
						"aria-label",
						isDark ? "Switch to light mode" : "Switch to dark mode"
					);
				}
				btn.addEventListener("click", function () {
					var current = getEffectiveTheme();
					var next = current === "dark" ? "light" : "dark";
					document.documentElement.setAttribute("data-theme", next);
					localStorage.setItem("theme", next);
					updateIcon();
				});
				updateIcon();

				var menuBtn = document.getElementById("menu-toggle");
				var nav = document.getElementById("main-nav");
				menuBtn.addEventListener("click", function () {
					var isOpen = nav.classList.toggle("nav-open");
					menuBtn.setAttribute("aria-expanded", isOpen);
					menuBtn.setAttribute(
						"aria-label",
						isOpen ? "Close menu" : "Open menu"
					);
				});

				nav.querySelectorAll(".nav-link").forEach(function (link) {
					link.addEventListener("click", function () {
						nav.classList.remove("nav-open");
						menuBtn.setAttribute("aria-expanded", "false");
						menuBtn.setAttribute("aria-label", "Open menu");
					});
				});
			})();
		</script>
	</body>
</html>

<style>
	.main-header {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		align-items: center;
		padding-top: 2rem;
		padding-bottom: 2rem;
		margin-bottom: 1rem;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 0.6rem;
		text-decoration: none;
		color: var(--text);
		font-size: 1.4rem;
		font-weight: 800;
		transition: var(--transition);
		flex-shrink: 0;
	}

	.logo:hover {
		opacity: 0.8;
	}

	.logo-icon {
		width: 32px;
		height: 32px;
		color: var(--primary);
	}

	.logo-text {
		letter-spacing: -0.05em;
	}

	.main-nav {
		display: flex;
		gap: 1.8rem;
		align-items: center;
	}

	.nav-link {
		color: var(--text-muted);
		text-decoration: none;
		font-weight: 600;
		transition: var(--transition);
		font-size: 1rem;
		white-space: nowrap;
	}

	.nav-link:hover {
		color: var(--primary);
	}

	.nav-link[aria-current="page"] {
		color: var(--primary);
		position: relative;
	}

	.nav-link[aria-current="page"]::after {
		content: "";
		position: absolute;
		bottom: -6px;
		left: 0;
		right: 0;
		height: 2px;
		background: var(--primary);
		border-radius: 1px;
	}

	.theme-toggle {
		background: var(--glass-bg);
		border: 1px solid var(--glass-border);
		border-radius: 10px;
		width: 38px;
		height: 38px;
		cursor: pointer;
		transition: var(--transition);
		font-size: 1.1rem;
		line-height: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.theme-toggle:hover {
		border-color: var(--primary);
		background: var(--card-hover-bg);
	}

	.theme-toggle:focus-visible {
		outline: 2px solid var(--primary);
		outline-offset: 2px;
	}

	/* Hamburger button — hidden on desktop */
	.menu-toggle {
		display: none;
		background: var(--glass-bg);
		border: 1px solid var(--glass-border);
		border-radius: 10px;
		width: 38px;
		height: 38px;
		cursor: pointer;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
		transition: var(--transition);
	}

	.menu-toggle:hover {
		border-color: var(--primary);
		background: var(--card-hover-bg);
	}

	.menu-toggle:focus-visible {
		outline: 2px solid var(--primary);
		outline-offset: 2px;
	}

	.hamburger {
		display: block;
		width: 18px;
		height: 2px;
		background: var(--text);
		position: relative;
		transition: var(--transition);
	}

	.hamburger::before,
	.hamburger::after {
		content: "";
		position: absolute;
		left: 0;
		width: 18px;
		height: 2px;
		background: var(--text);
		transition: var(--transition);
	}

	.hamburger::before {
		top: -6px;
	}

	.hamburger::after {
		top: 6px;
	}

	/* Animate hamburger to X when open */
	.menu-toggle[aria-expanded="true"] .hamburger {
		background: transparent;
	}

	.menu-toggle[aria-expanded="true"] .hamburger::before {
		top: 0;
		transform: rotate(45deg);
	}

	.menu-toggle[aria-expanded="true"] .hamburger::after {
		top: 0;
		transform: rotate(-45deg);
	}

	.main-footer {
		text-align: center;
		margin-top: auto;
		padding-top: 3rem;
		padding-bottom: 3rem;
		border-top: 1px solid var(--glass-border);
	}

	.footer-disclaimer {
		max-width: 1000px;
		margin: 0 auto 2rem;
		padding: 1.5rem;
		border-radius: 12px;
		background: var(--glass-bg);
		border-left: 4px solid var(--primary);
		text-align: left;
	}

	.footer-disclaimer p {
		color: var(--text-muted);
		font-size: 0.9rem;
		line-height: 1.7;
		margin: 0;
	}

	.footer-disclaimer strong {
		color: var(--text);
	}

	.footer-sources {
		margin-bottom: 2rem;
	}

	.footer-sources-title {
		font-size: 0.9rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--text-muted);
		margin-bottom: 0.8rem;
	}

	.footer-sources ul {
		list-style: none;
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 0.6rem 1.5rem;
	}

	.footer-sources a {
		color: var(--primary);
		text-decoration: none;
		font-size: 0.9rem;
		transition: var(--transition);
	}

	.footer-sources a:hover {
		text-decoration: underline;
		opacity: 0.8;
	}

	.footer-copy {
		color: var(--text-muted);
		font-size: 0.85rem;
		margin: 0;
	}

	/* Mobile — hamburger menu */
	@media (max-width: 860px) {
		.menu-toggle {
			display: flex;
		}

		.main-nav {
			display: none;
			width: 100%;
			flex-direction: column;
			gap: 0;
			background: var(--glass-bg);
			border: 1px solid var(--glass-border);
			border-radius: 12px;
			padding: 0.5rem 0;
			margin-top: 1rem;
		}

		.main-nav.nav-open {
			display: flex;
		}

		.nav-link {
			width: 100%;
			padding: 0.75rem 1.25rem;
			font-size: 1rem;
			border-radius: 8px;
		}

		.nav-link:hover,
		.nav-link[aria-current="page"] {
			background: var(--primary-glow);
		}

		.nav-link[aria-current="page"]::after {
			display: none;
		}

		.main-nav .theme-toggle {
			margin: 0.5rem 1.25rem;
			align-self: flex-start;
		}
	}
</style>
